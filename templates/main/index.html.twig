{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ 'Привет'|trans }}</h1>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul>
                <li>Вы авторизованы: {{ app.user.email }}</li>
                <li><a class="navbar-item" href="{{ path('logout') }}">{{ 'Выйти'|trans }}</a></li>
                <li><a class="navbar-item" href="{{ path('logout') }}">{{ 'Выйти'|trans }}</a></li>
            </ul>
        {% else %}
            <ul>
                <li><a class="navbar-item" href="{{ path('login') }}">{{ 'Авторизация'|trans }}</a></li>
                <li><a class="navbar-item" href="{{ path('reg') }}">{{ 'Регистрация'|trans }}</a></li>
            </ul>
        {% endif %}
    </div>
{% endblock %}
