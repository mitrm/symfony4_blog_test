{% extends 'base.html.twig' %}

{% block body %}
    <div class="section">
        <div class="title-tab">
            <h2 class="title is-3">Добавить запись</h2>
        </div>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="field">
            {{ form_label(form.title, 'Заголовок'|trans, {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.title, {'attr': {'class': 'input'}}) }}
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.title) }}
            </div>
        </div>

        <div class="field">
            {{ form_label(form.content, 'Текст'|trans, {'label_attr': {'class': 'label'}}) }}
            <div class="control">
                {{ form_widget(form.content, {'attr': {'class': 'textarea'}}) }}
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.content) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="control">
            <button type="submit" class="button is-primary">
                {{ 'Создать'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


